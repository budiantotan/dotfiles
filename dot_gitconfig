[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args "\"$LOCAL\"" "\"$REMOTE\""
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  tool = vscode
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args "\"$LOCAL\"" "\"$MERGED\"" "\"$REMOTE\"" --output "\"$MERGED\""
[mergetool "vscode"]
  cmd = code --wait $MERGED
